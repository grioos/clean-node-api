{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Construindo uma API Rest um NodeJS utilizando TDD, Clean Architecture e Design Patterns.",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --colors --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watchAll -c jest-unit-config.js",
    "test:integration": "npm test -- --watchAll -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "author": "Gabriel Rios",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "husky": "^5.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "standard": "^16.0.3",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.3",
    "validator": "^13.1.17"
  }
}